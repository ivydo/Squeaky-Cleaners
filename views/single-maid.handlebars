{{!-- Show maid name and review qty --}}
<article class="maid">
    <div class="title">
        {{ maid.name }}
    </div>

    <div class="meta">
        <a href="/maid/{{maid.id}}">{{maid.reviews.length}} Review(s)</a>
    </div>
</article>

{{!-- add review form --}}
{{#if loggedIn}}
<form class="review-form">
    <div>
        <textarea name="review-body"></textarea>
    </div>

    <div>
        <button type="submit">Add Review</button>
    </div>
</form>
{{/if}}

{{!-- reviews displayed connected to maid --}}
<h2>Reviews</h2>
<div class="reviews">
    {{#each maid.reviews}}
    <section class="review">
        <div class="meta">
            {{username}}
        </div>

        <div class="text">
            <ul>
                <li>
                {{review_text}}
                </li>
            </ul>
        </div>
    </section>
    {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/review.js"></script>
{{/if}}