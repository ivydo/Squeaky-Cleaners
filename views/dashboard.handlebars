{{!-- route maid info to here; will follow template from homepage Module 14 on how it lists all posts from all users --}}
  <div class="dash-container">
<div class="dash-section">
  <div class="dash-header">
    <h2>Dashboard</h2>

    
  </div>
  <div class="dash-maid">
<ul class="maid-list">
  {{#each maids as |maid|}}
  <li>
    {{> maid-info maid }}
  </li>
  {{/each}}
</ul>
  </div>
</div>

<div class="dash-review-section">
    <div class="dash-header">
      <h2>My Reviews</h2>
    </div>
</div>
{{!-- List reviews left by loggedIn user --}}
  {{#if reviews.length}}
    <section class="my-reviews">
      <ol>
      {{#each reviews as |review|}}
      <li>
        {{> reviews review}}
        <a href="/dashboard/edit/{{review.id}}" class="edit-link">Edit Review</a>
      </li>
      {{/each}}
    </ol>
  </section>
  {{/if}}


